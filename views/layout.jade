doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/app.css')
    if settings.env == 'development'
      script(src='/bower_components/requirejs/require.js')
      script(src='/javascripts/main.js')
    else
      script(src='/javascripts/app.js')
  body
    .wrapper
      .uk-navbar.uk-margin-small-bottom.uk-margin-small-top
        a.uk-navbar-brand.uk-hidden-small(href="/") mypixels
        ul.uk-navbar-nav.uk-hidden-small
          li
            a(href="#1") Frontpage
          li
            a(href="#1") Portfolio
        .uk-navbar-flip
          ul.uk-navbar-nav
            if (user)
              li
                a(href='#{routes.logout}') Log out
            else
              li
                a(href='#{routes.login}') Log in
        a.uk-navbar-toggle.uk-visible-small(href="#offcanvas", data-uk-offcanvas)
        .uk-navbar-brand.uk-navbar-center.uk-visible-small mypixels
      block content
      .uk-offcanvas(id="offcanvas")
        .uk-offcanvas-bar
          .uk-nav.uk-nav-offcanvas
            li
              a(href="#1") Frontpage                    
            li
              a(href="#1") Portfolio